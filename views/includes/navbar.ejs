<style>
  .btn-search {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }

  .btn-search:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }

  .input-search {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
  }

  .title-name {
    font-size: 1.5rem;
    color: #fe424d;
  }

  .title-subname {
    font-size: 2rem;
    color: black;
  }
  .navbar-collapse {
    background-color: #fff;
    transition: all 0.5s;
  }
  .username{
    /* border: 2px solid black; */
    border-radius: 12px;
    color: #fff;
    background-color:#fe424d ;
    padding: 5px;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listing"><i class="far fa-compass"></i> <span class="title-name"> &nbsp;<span
          class="title-subname">Travel</span> Stay</span></a>
          <% if(currUser){ %>
          <div class="username">@<%= currUser.username %></div>
          <% } %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input class="form-control me-2 input-search" type="search" placeholder="Search  destination"
            aria-label="Search">
          <button class="btn btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <li class="nav-item"><a class="nav-link" href="/listing/new">TravelStay your home</a></li>
        <% if(!currUser){ %>
          <li class="nav-item"><a class="nav-link active" href="/signup"><b>Sign up</b></a></li>
          <li class="nav-item"><a class="nav-link active" href="/login"><b>Log in</b></a></li>
          <% } %>
            <% if(currUser){ %>
              <li class="nav-item"><a class="nav-link active" href="/logout">Log out</a></li>
              <% } %>
      </div>
    </div>
  </div>
</nav>


